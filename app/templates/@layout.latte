<!DOCTYPE html>
<html lang="cs">
    <head>
        <meta charset=utf-8 />
        <title>{block #title|striptags|trim}SkaHos{/block}</title>
        <meta name="keywords" content="" />
        <meta name="author" content="www.sinacek.cz" />
        <meta name="robots" content="{$robots}" n:ifset="$robots">

        {control js 'jquery-1.8.2.min.js',
        'jquery-ui-1.10.0.custom.min.js',
        'my-datepicker.js',
        'combobox.js',
        'jquery.nette.js',
        'bootstrap.js',
        'jquery.fancybox.pack.js',
        'jquery.ajaxform.js',
        'my.js'}

           {control css 'fancybox/fancybox.css',
           'bootstrap.min.css', 
            'bootstrap-responsive.min.css',
            'jquery-ui-1.10.0.custom.css',
            'site.css'}
        <script type="text/javascript">
            function changeRole(id){
                 $.post({link changeRole!}, { roleId : id });
            }
{if $presenter->context->params['productionMode']}
          var _gaq = _gaq || [];
          var pluginUrl = '//www.google-analytics.com/plugins/ga/inpage_linkid.js';
          _gaq.push(['_require', 'inpage_linkid', pluginUrl]);
          _gaq.push(['_setAccount', 'UA-2900685-26']);
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();
{/if}
        </script>
    </head>

    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" n:href=":Default:">Hospodaření</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li n:if="!$user->isLoggedIn()" {ifCurrent :Default:about}class='active'{/ifCurrent}><a n:href=":Default:about">O projektu</a></li>
                            <li {ifCurrent :Tutorial:*}class='active'{/ifCurrent}><a n:href=":Tutorial:">Příručka</a></li>
                            {if $user->isLoggedIn()}
                            <li {ifCurrent :Accountancy:Event:*}class='active'{/ifCurrent}><a n:href=":Accountancy:Event:Default:">Akce</a></li>
                            <li {ifCurrent :Accountancy:Camp:*}class='active'{/ifCurrent}><a n:href=":Accountancy:Camp:Default:">Tábory <sup style="color:red;font-weight: bold;">BETA</sup></a></li>
                            <li><a n:href=":Accountancy:Travel:Default:">Cestovní příkazy</a></li>
                            {/if}
                        </ul>
                        <p class="navbar-text pull-right" n:inner-if="$user->isLoggedIn()">
                            <select onchange="changeRole(this.value)" class="roleSelect input-large">
                                <option n:foreach="$myRoles as $r" value="{$r->ID}" {if $r->ID == $myRole}selected="selected"{/if}>{$r->RegistrationNumber} - {$r->Role}</option>
                            </select>
                            <a n:href=":Auth:logoutSis" class="btn btn-primary btn-small">Odhlásit se</a>
                        {else}
                            <a n:href=":Auth:logOnSkautIs (isset($backlink)) ? $backlink : NULL" class="btn btn-primary btn-small">Přihlásit se</a>
                        </p>

                      </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container">
            <div id="content">
            {snippet flash}
                {foreach $flashes as $flash}
                <div class="alert alert-{$flash->type}">
                    <a class="close" data-dismiss="alert">×</a>
                    {$flash->message}
                </div>
                {/foreach}
            {/snippet}
            {include #content}
        </div><!-- /content -->
            <hr style="clear: both" />
            <footer>
                {*}Účtovaných výprav {$cntActiveEvents} / {*}
                <a n:href=":Default:about">O projektu</a> / 
                Vytvořil <a href="http://sinacek.cz">Sináček.cz</a> z <a href="http://osmnactka.net">18. střediska Kruh Praha 6</a>
            </footer>
        </div> <!-- /container -->
    </body>
</html>