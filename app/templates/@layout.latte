<!DOCTYPE html>
<html lang="cs">
    {*}<html lang="cs" manifest="{$baseUri}/appa.manifest">{*}
    <head>
        <meta charset=utf-8 />
        <title>{block #title|striptags|trim}SkaHos{/block}</title>
        <meta name="keywords" content="" />
        <meta name="author" content="www.sinacek.cz" />
        <meta name="robots" content="{$robots}" n:ifset="$robots">
        <link rel="shortcut icon" href="{$baseUri}/favicon.ico" />
        <link rel="apple-touch-icon" href="{$baseUri}/images/logo.png" />
        <link rel="apple-touch-icon-precomposed" href="{$baseUri}/images/logo57.png" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {control css}
        {control js}
        <script type="text/javascript">
            {if $presenter->context->parameters['productionMode']}
            (function(i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function() {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                        m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-50892244-1', 'skauting.cz');
            ga('require', 'displayfeatures');
            ga('send', 'pageview');
            {/if}
                
            function changeRole(id) {
                $.post({link changeRole!}, { roleId: id}).done(function() {
                    window.location.href = {= $presenter->link('this')};
                });
            }
            $(document).ready(function() {
            {if $user->isLoggedIn()} startLoginTimer();{/if}
            });
        </script>
    </head>

    <body>
        <div id="topAlertBox">
            <ul> </ul>
        </div>

        <div class="navbar navbar-inverse navbar-fixed-top" id="topBar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" n:href=":Default:"><span style="color:yellow;font-weight: bold;" n:tag-if="!$ssl">Hospodaření </span></a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li n:if="!$user->isLoggedIn()" {ifCurrent :Default:about}class='active'{/ifCurrent}><a n:href=":Default:about">O projektu</a></li>
                            <li {ifCurrent :Tutorial:*}class='active'{/ifCurrent}><a n:href=":Tutorial:">Příručka</a></li>
                                {if $user->isLoggedIn()}
                                <li {ifCurrent :Accountancy:Event:*}class='active'{/ifCurrent}><a n:href=":Accountancy:Event:Default:">Akce</a></li>
                                <li {ifCurrent :Accountancy:Camp:*}class='active'{/ifCurrent}><a n:href=":Accountancy:Camp:Default:">Tábory{*} <sup style="color:red;font-weight: bold;">BETA</sup>{*}</a></li>
                                <li><a n:href=":Accountancy:Travel:Default:">Cestovní příkazy</a></li>
                                <li {ifCurrent :Accountancy:UnitAccount:*}class='active'{/ifCurrent}><a n:href=":Accountancy:UnitAccount:Default: ">Jednotka</a></li>
                                {/if}
                        </ul>


                        {if $user->isLoggedIn()}
                            <p class="navbar-text pull-right">
                                <select onchange="changeRole(this.value)" class="roleSelect input-large">
                                    <option n:foreach="$myRoles as $r" value="{$r->ID}" {if $r->ID == $myRole}selected="selected"{/if}>{$r->RegistrationNumber} - {$r->Role}</option>
                                </select>
                                <a n:href=":Auth:logoutSis" class="btn btn-primary btn-small hidden-phone">Odhlásit se</a>
                                <a n:href=":Auth:logoutSis" class="btn btn-primary btn-small visible-phone btn-block">Odhlásit se</a>
                            </p>
                            <div id="timer" class="navbar-text pull-right" style="width:100px;padding-top: 15px;">
                                <div class="progress progress-success" style="height:7px;">
                                    <div class="bar" style="width: 100%;"></div>    
                                </div>
                            </div>
                        {else}
                            <p class="navbar-text pull-right">
                                <a n:href=":Auth:logOnSkautIs (isset($backlink)) ? $backlink : NULL" class="btn btn-primary btn-small hidden-phone">Přihlásit se</a>
                            </p>
                        {/if}
                    </div><!--/.nav-collapse -->
                    <a n:href=":Auth:logOnSkautIs (isset($backlink)) ? $backlink : NULL" class="btn btn-primary btn-small hidden-desktop btn-block" n:if="!$user->isLoggedIn()">Přihlásit se</a>
                </div>
            </div>
        </div>

        <div class="container">
            <div id="content">
                {snippet flash}
                    {foreach $flashes as $flash}
                        <div class="alert alert-{$flash->type}">
                            <a class="close" data-dismiss="alert">×</a>
                            {$flash->message}
                        </div>
                    {/foreach}
                {/snippet}
                {snippet contentSnip}
                    {include #content}
                {/snippet}
            </div><!-- /content -->
            <hr style="clear: both" class="hidden-phone" />
            <footer class="hidden-phone">
                {*}Účtovaných výprav {$cntActiveEvents} / {*}
                <a n:href=":Default:about">O projektu</a> / 
                Vytvořil <a href="http://sinacek.cz">Sináček.cz</a> z <a href="http://osmnactka.net">18. střediska Kruh Praha 6</a>
            </footer>
        </div> <!-- /container -->
    </body>
</html>